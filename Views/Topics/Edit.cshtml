@model ProiectDAW.Models.Topic

<h2 class="text-center mt-5" style="color: #ec407a;">Editare subiect</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Topics",
            method: FormMethod.Post,
            routeValues: new { id = Model.Id }))
            {
                <div class="form-group">
                    @Html.Label("Title", "Titlu Subiect", new { @class = "form-label" })
                    @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <br />

                <div class="form-group">
                    @Html.Label("Content", "Continut Subiect", new { @class = "form-label" })
                    @Html.Editor("Content", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
                </div>
                <br />

                <div class="form-group">
                    <label class="form-label">Selectati categoria</label>
                    @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"), "Selectati categoria", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
                </div>
                <br />

                <button class="btn-submit-edit" type="submit">Salveaza modificarile</button>
            }
        </div>
    </div>
</div>

<style>
    .form-group {
        margin-bottom: 15px; 
    }

    .form-label {
        color: #ec407a;
        margin-bottom: 5px; 
    }

    .form-control {
        border: 1px solid #ec407a;
        border-radius: 5px;
    }

    .btn-submit-edit {
        background-color: #f06292; 
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 10px; 
        font-family: 'Arial', sans-serif;
    }

        .btn-submit-edit:hover {
            background-color: #e91e63;
            color: white;
        }

    .text-danger {
        color: #e91e63; 
    }
</style>
