<br />
<br />
@if (ViewBag.Message != null)
{
    <div class="@ViewBag.Alert p-3 rounded-3 text-center mb-5">@ViewBag.Message</div>
}
<div class="row">
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-4 mb-4">
            <div class="user-card card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p class="user-info"><i class="bi bi-person"></i> UserName: @user.UserName</p>
                        <p class="user-info"><i class="bi bi-envelope"></i> Email utilizator: @user.Email</p>

                        @if (@user.FirstName != null)
                        {
                            <p class="user-info"><i class="bi bi-person"></i> Nume utilizator: @user.FirstName</p>
                        }

                        @if (@user.LastName != null)
                        {
                            <p class="user-info"><i class="bi bi-person"></i> Prenume utilizator: @user.LastName</p>
                        }

                        @if (@user.PhoneNumber != null)
                        {
                            <p class="user-info"><i class="bi bi-phone"></i> Telefon utilizator: @user.PhoneNumber</p>
                        }

                    </div>
                    <div class="user-actions p-3 d-flex flex-row justify-content-between">
                        @if ((@user.Id == ViewBag.CurrentUser) || ViewBag.IsAdmin)
                        {
                            <a class="btn btn-sm btn-success" href="/Users/Edit/@user.Id">Editare utilizator</a>
                        }

                        <a class="btn btn-sm btn-success" href="/Users/Show/@user.Id">Vizualizare utilizator</a>
                    </div>
                </div>

            </div>
        </div>
    }
</div>

<br />
<br />

<style>
    .user-card {
        background-color: #f8bbd0; 
        color: #4a4a4a;
        border-radius: 15px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); 
    }

    .user-info {
        font-family: 'Arial', sans-serif;
        margin-bottom: 10px;
    }

        .user-info i {
            color: #ec407a;
            margin-right: 5px;
        }

    .user-actions a {
        background-color: #f06292;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px; 
        font-family: 'Arial', sans-serif;
        text-decoration: none;
    }

        .user-actions a:hover {
            background-color: #e91e63; 
            color: white;
        }
</style>
