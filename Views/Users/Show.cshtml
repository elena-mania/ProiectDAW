@model ProiectDAW.Models.ApplicationUser

<div class="user-profile-card card mt-3" style="width: 100%;">
    <div class="card-body d-flex justify-content-between flex-column">
        <div>
            <p class="user-info"><i class="bi bi-person"></i> UserName: @Model.UserName</p>
            <p class="user-info"><i class="bi bi-envelope"></i> Email utilizator: @Model.Email</p>

            @if (ViewBag.Roles.Count > 0)
            {
                <p class="user-info"><i class="bi bi-person"></i> Rol utilizator:</p>
                @foreach (var role in ViewBag.Roles)
                {
                    <span class="role-badge">@role</span>
                }
            }
        </div>

        <div class="user-actions p-3 d-flex flex-row justify-content-between">
            @if ((Model.Id == ViewBag.CurrentUser) || ViewBag.IsAdmin)
            {
                @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", method: FormMethod.Post, routeValues: new { id = @Model.Id }))
                {
                    <button class="btn-delete-user" type="submit">Șterge utilizator</button>
                }
            }
        </div>
    </div>
</div>

